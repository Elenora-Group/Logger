{
  "name": "@elenoragroup/logger",
  "version": "1.0.0",
  "description": "A simple logger",
  "main": "dist/commonjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "type": "module",
  "source": "src/index",
  "dependencies": {
    "chalk": "^4.1.0",
    "luxon": "^2.4.0",
    "stacktrace-js": "^2.0.2"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/commonjs/index.js"
    }
  },
  "devDependencies": {
    "@types/luxon": "^2.3.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "shx": "^0.3.4",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "shx rm -rf -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-commonjs.json && shx cp -f package-esm.json ./dist/esm/package.json && shx cp -f package-commonjs.json ./dist/commonjs/package.json",
    "lint": "eslint -c .eslintrc.json --ext .ts ./src",
    "docs": "typedoc --out docs ./src",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "logger"
  ],
  "author": "Elenora Group",
  "license": "GPL-3.0-or-later"
}
